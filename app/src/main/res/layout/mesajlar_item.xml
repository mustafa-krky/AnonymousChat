<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mesajlar_item_profile_img"
            android:layout_width="66dp"
            android:layout_height="66dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black" />

        <TextView
            android:id="@+id/mesajlar_item_kullanici_adi"
            android:layout_toStartOf="@id/mesajlar_item_sag_yon"
            android:layout_toEndOf="@id/mesajlar_item_profile_img"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mesajlar_item_son_mesaj"
            android:layout_toStartOf="@id/mesajlar_item_sag_yon"
            android:layout_toEndOf="@id/mesajlar_item_profile_img"
            android:layout_below="@+id/mesajlar_item_kullanici_adi"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/mesajlar_item_sag_yon"
            android:src="@drawable/ic_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>