<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="8dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ui_user_profile_img"
            android:layout_width="66dp"
            android:layout_height="66dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black" />

        <ImageView
            android:id="@+id/iv_user_item_online"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@id/ui_user_profile_img"
            android:layout_alignTop="@id/ui_user_profile_img"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/ui_user_name"
            android:layout_toStartOf="@id/ui_img_right"
            android:layout_toEndOf="@id/ui_user_profile_img"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ui_img_right"
            android:src="@drawable/ic_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>