<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="8dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cstm_dialog_gelen_msj_istek_item_imgProfile"
            android:layout_width="77dp"
            android:layout_height="77dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black"/>

        <TextView
            android:id="@+id/gelen_mesaj_istekleri_txtMsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/secenek_linear"
            android:layout_marginTop="12dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/cstm_dialog_gelen_msj_istek_item_imgProfile"
            android:text="Test kullanıcısı sana mesaj göndermek istiyor"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/secenek_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gelen_mesaj_istekleri_iptal"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/ic_close"
                app:tint="#E34545"/>

            <ImageView
                android:id="@+id/gelen_mesaj_istekleri_onayla"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/baseline_check_circle_outline_24"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>